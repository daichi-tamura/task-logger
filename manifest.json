{
  "manifest_version": 3,
  "name": "Task Logger",
  "version": "1.0",
  "description": "タスクの開始・終了時間を記録できるシンプルなロガー",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Task Logger"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 